<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ABE3"
    tools:context=".Predict">

    <ImageView
        android:id="@+id/imageview_predict"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="69dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textview_result"
        android:layout_below="@id/imageview_predict"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#EBFC05"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10sp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_pred"
        android:layout_below="@id/textview_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EBFC05"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10sp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>